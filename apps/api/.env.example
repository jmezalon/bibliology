# Server
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database
DATABASE_URL=""

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-secret-key-change-this-in-production
