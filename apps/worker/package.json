{
  "name": "@bibliology/worker",
  "version": "1.0.0",
  "private": true,
  "description": "Bibliology Background Worker (BullMQ)",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist node_modules .turbo"
  },
  "dependencies": {
    "@bibliology/types": "workspace:*",
    "@bibliology/validation": "workspace:*",
    "@bibliology/utils": "workspace:*",
    "@prisma/client": "^5.7.1",
    "bullmq": "^5.1.5",
    "dotenv": "^16.3.1",
    "ioredis": "^5.3.2",
    "jszip": "^3.10.1",
    "pdfkit": "^0.14.0",
    "sharp": "^0.33.1",
    "winston": "^3.11.0",
    "xml2js": "^0.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/pdfkit": "^0.13.4",
    "@types/xml2js": "^0.4.14",
    "@vitest/coverage-v8": "^1.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
