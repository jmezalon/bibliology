# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/bibliology"

# ============================================================================
# REDIS
# ============================================================================
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# ============================================================================
# AWS S3 / MinIO (Object Storage)
# ============================================================================
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="minioadmin"
AWS_SECRET_ACCESS_KEY="minioadmin"
AWS_S3_BUCKET="bibliology-assets"
AWS_S3_ENDPOINT="http://localhost:9000"  # MinIO endpoint for local dev
USE_S3=false  # Set to true in production

# ============================================================================
# EMAIL (Future - for password reset, notifications)
# ============================================================================
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@bibliology.com"

# ============================================================================
# FRONTEND
# ============================================================================
VITE_API_URL="http://localhost:3000"

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV="development"
PORT=3000
FRONTEND_URL="http://localhost:5173"

# ============================================================================
# RATE LIMITING
# ============================================================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGIN="http://localhost:5173"

# ============================================================================
# CODECOV (CI only)
# ============================================================================
CODECOV_TOKEN=""
